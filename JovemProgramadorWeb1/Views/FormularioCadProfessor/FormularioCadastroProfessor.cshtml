<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulário de Cadastro do Professor</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <style>
        form {
            display: flex;
            flex-direction: column;
            max-width: 400px;
            margin: 0 auto; /* Centraliza horizontalmente */
            text-align: center; /* Centraliza o texto das labels */
        }

        label {
            margin-bottom: 1px;
            font-weight: bold;
        }

        input {
            padding: 1px;
            margin-bottom: 1px;
        }

        button {
            padding: 10px;
            background-color: #007BFF;
            color: white;
            border: none;
            cursor: pointer;
        }
    </style>
    <script>
        function formatCPF(cpf) {
            cpf = cpf.replace(/\D/g, ''); // Remove caracteres não numéricos

            if (cpf.length > 11) {
                cpf = cpf.slice(0, 11); // Limita a 11 caracteres
            }

            if (cpf.length > 3 && cpf.length <= 6) {
                cpf = cpf.replace(/(\d{3})(\d{0,3})/, '$1.$2');
            } else if (cpf.length > 6 && cpf.length <= 9) {
                cpf = cpf.replace(/(\d{3})(\d{3})(\d{0,3})/, '$1.$2.$3');
            } else if (cpf.length > 9) {
                cpf = cpf.replace(/(\d{3})(\d{3})(\d{3})(\d{0,2})/, '$1.$2.$3-$4');
            }

            return cpf;
        }

        function handleCPFFormatting(input) {
            var formattedCPF = formatCPF(input.value);
            input.value = formattedCPF;
        }

        function formatCEP(cep) {
            cep = cep.replace(/\D/g, ''); // Remove caracteres não numéricos

            if (cep.length > 8) {
                cep = cep.slice(0, 8); // Limita a 8 dígitos
            }

            if (cep.length > 5) {
                cep = cep.replace(/(\d{5})(\d{0,3})/, '$1-$2'); // Aplica a máscara
            }

            return cep;
        }

        function handleCEPInput(input) {
            var formattedCEP = formatCEP(input.value);
            input.value = formattedCEP;
        }
    </script>
</head>
<body>

    <h2 style="text-align: center;">Formulário de Cadastro</h2>
    <br>
    <br>


    <form action="/processar-formulario" method="post">
        <label for="cpf">CPF:</label>
        <input type="text" id="cpf" name="cpf" oninput="handleCPFFormatting(this)" required><br><br>

        <label for="nome">Nome Completo:</label>
        <input type="text" id="nome" name="nome" required><br><br>

        <label for="idade">Idade:</label>
        <input type="number" id="idade" name="idade" required><br><br>

        <label for="disciplina">Disciplina:</label>
        <input type="text" id="disciplina" name="disciplina" required><br><br>

        <div class="d-grid gap-2 d-md-block">
            <button class="btn btn-primary" type="button">Adicionar</button>
            <a type="submit" class="btn btn-primary" role="button" href="~/Aluno/Index"> Voltar </a>
        </div>

    </form>

    <script>
        $(document).ready(function () {
            $('.cpf-mask').mask('000.000.000-00'); // Aplica a máscara de CPF
        });
    </script>
</body>
</html>