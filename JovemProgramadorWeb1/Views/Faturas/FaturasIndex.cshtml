@model List<Fatura>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Faturas</title>
    <style>
        table {
            border-collapse: collapse;
            width: 50%;
            margin: 5% auto 5%;
        }

        th, td {
            border: 1px solid black;
            padding: 5px;
            text-align: left;
            background-color: #f2f2f2;
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0px;
            bottom: 5px;
            background-size: cover;
        }

        h2 {
            text-align: center;
            color: #333;
            margin-top: 3%;
        }



    </style>
</head>
<body>

    <h2>Faturas</h2>

    <table>
        <thead>
            <tr>
                <th>Código</th>
                <th>Mês/Ano</th>
                <th>Valor</th>
                <th>Pagamento</th>
                <th>Código do Sócio</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var fatura in Model)
                {
                    <tr>
                        <td>@fatura.codigo</td>
                        <td>@fatura.mesAnoFatura</td>
                        <td>@fatura.valor</td>
                        <td>@(fatura.flagPagamento ? "Pago" : "Pendente")</td>
                        <td>@fatura.codigoSocio</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">Nenhuma fatura encontrada.</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>